generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMINISTRADOR
  VENDEDOR
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  telefone  String?
  senha     String
  role      Role
  criado_em DateTime @default(now())
  ativo     Boolean  @default(true)

  indicacoes Indicacao[]

  @@map("usuarios")
}

model EstabelecimentoCeoPag {
  id              String    @id @default(uuid())
  ceo_pag_id      Int
  document_number String
  social_reason   String
  name            String
  status          Int
  account_source  String
  created_at      DateTime
  updated_at      DateTime?
  deleted_at      DateTime?

  indicacao Indicacao?

  @@unique([ceo_pag_id, account_source])
  @@map("estabelecimentos_ceopag")
}

model Indicacao {
  id            String  @id @default(uuid())
  taxa_comissao Int
  usuario_id    String
  usuario       Usuario @relation(fields: [usuario_id], references: [id])

  estabelecimento_id String
  estabelecimento    EstabelecimentoCeoPag @relation(fields: [estabelecimento_id], references: [id])

  atribuido_em DateTime @default(now())

  @@unique([estabelecimento_id], map: "indicacoes_estabelecimento_unique")
  @@map("indicacoes")
}
